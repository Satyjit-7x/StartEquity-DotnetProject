@{
    ViewData["Title"] = "Secondary Market";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Secondary Market</h2>
            <p class="text-muted">Buy and sell shares from other investors</p>
        </div>
        <div class="col-md-4 text-right">
            <a asp-controller="Investor" asp-action="Portfolio" class="btn btn-success">My Portfolio</a>
            <a asp-action="MyOffers" class="btn btn-info">My Offers</a>
        </div>
    </div>

    @if (ViewBag.AvailableOffers != null && ViewBag.AvailableOffers.Count > 0)
    {
        <div class="row">
            @foreach (var offer in ViewBag.AvailableOffers)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@offer.Company.Name</h5>
                            <small class="text-muted">by @offer.Seller.User.FullName</small>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Shares for Sale:</strong>
                                </div>
                                <div class="col-6">
                                    @offer.SharePercentage.ToString("F2")%
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Ask (per 1%):</strong>
                                </div>
                                <div class="col-6">
                                    ₹@offer.AskingPrice.ToString("N2")
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Total Value:</strong>
                                </div>
                                <div class="col-6">
                                    ₹@offer.TotalValue.ToString("N2")
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Market Value (per 1%):</strong>
                                </div>
                                <div class="col-6">
                                    ₹@offer.CurrentMarketPrice.ToString("N2")
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(offer.Description))
                            {
                                <div class="mb-2">
                                    <strong>Description:</strong>
                                    <p class="text-muted small">@offer.Description</p>
                                </div>
                            }
                            <div class="mb-2">
                                <small class="text-muted">
                                    Listed: @offer.CreatedAt.ToString("MM/dd/yyyy HH:mm")
                                </small>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-6">
                                    <a asp-action="Details" asp-route-id="@offer.Id" class="btn btn-outline-primary btn-sm btn-block">
                                        View Details
                                    </a>
                                </div>
                                <div class="col-6">
                                    @{
                                        var currentUserId = User?.Identity?.Name; 
                                    }
                                    <form asp-action="Buy" method="post" class="d-inline">
                                        <input type="hidden" name="offerId" value="@offer.Id" />
                                        <button type="submit" class="btn btn-success btn-sm btn-block" 
                                                onclick="return confirm('Are you sure you want to buy these shares?')">
                                            Buy Now
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body text-center">
                        <h4>No Share Offers Available</h4>
                        <p class="text-muted">There are currently no shares available for purchase in the secondary market.</p>
                        <p>Be the first to list your shares for sale!</p>
                        <a asp-controller="Investor" asp-action="Portfolio" class="btn btn-primary">View My Portfolio</a>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>How the Secondary Market Works</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h5>1. List Your Shares</h5>
                            <p>Go to your portfolio and list shares you want to sell at your desired price.</p>
                        </div>
                        <div class="col-md-4">
                            <h5>2. Browse Offers</h5>
                            <p>View all available share offers from other investors with pricing and details.</p>
                        </div>
                        <div class="col-md-4">
                            <h5>3. Buy or Sell</h5>
                            <p>Purchase shares from others or wait for buyers to purchase your listed shares.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
